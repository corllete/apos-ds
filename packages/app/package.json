{
  "name": "a3-boilerplate",
  "private": "true",
  "version": "1.0.0-alpha.11",
  "description": "Apostrophe 3 Boilerplate Site",
  "main": "app.js",
  "scripts": {
    "start": "node app",
    "dev": "nodemon --delay 1000ms -x \"nodemon app.js\"",
    "build": "webpack && node app @apostrophecms/asset:build",
    "assets": "node app @corllete/apos-ds-page-type:publish-assets",
    "storybook": "node app @apostrophecms/storybook:run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/a3-boilerplate"
  },
  "author": "Apostrophe Technologies, Inc.",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@corllete/apos-ds": "^1.0.0-alpha.11",
    "@material/button": "^10.0.0",
    "@material/fab": "^10.0.0",
    "@material/icon-button": "^10.0.0",
    "@material/ripple": "^10.0.0",
    "@material/textfield": "^10.0.0",
    "apostrophe": "github:apostrophecms/apostrophe#221a2c85b49c48b9c886faf340b9401b999e976b",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "mini-css-extract-plugin": "^1.3.4",
    "normalize.css": "^8.0.1",
    "sass": "^1.26.11",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./src/**/*",
      "./node_modules/apostrophe/modules/@apostrophecms/**/*",
      "./node_modules/@corllete/apos-ds/index.js",
      "./node_modules/@corllete/apos-ds/lib/*.js",
      "./node_modules/@corllete/apos-ds/modules/**/*"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "lib/modules/*/public/js/*.js",
      "locales/*.json",
      "public/modules/**/*.less",
      "public/modules/**/*.js",
      "public/uploads",
      "public/apos-minified/*.js",
      "public/css/master-*.less",
      "modules/asset/ui/public/site.js",
      "data"
    ],
    "ext": "json, js, html, njk, scss, vue"
  },
  "devDependencies": {
    "eslint": "^7.8.0",
    "eslint-config-apostrophe": "^3.4.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.4"
  }
}
