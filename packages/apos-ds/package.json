{
	"name": "@corllete/apos-ds",
	"version": "1.0.0-alpha.1",
	"description": "Nunjucks Design System for Apostrophe CMS.",
	"keywords": [
		"apostrophecms",
		"design system",
		"nunjucks"
	],
	"main": "index.js",
	"author": "Corllete ltd.",
	"license": "MIT",
	"scripts": {
		"build": "webpack --mode=development",
		"build:prod": "webpack --mode=production",
		"watch": "run-p -n watch:*",
		"watch:js": "webpack --watch",
		"dart": "run-p -n dart:watch:*",
		"dart:watch:sass": "dart-sass modules/@corllete/apos-ds-page-type/assets/scss/app.scss modules/@corllete/apos-ds-page-type/ui/css/bundle.css --style=expanded --load-path=node_modules --load-path=modules/@corllete/apos-ds-page-type/assets/css --watch",
		"lint": "eslint ."
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/@corllete/apos-ds.git",
		"directory": "packages/apos-ds"
	},
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@babel/preset-env": "^7.7.7",
		"autoprefixer": "^9.7.3",
		"babel-loader": "^8.0.6",
		"copy-webpack-plugin": "^6.4.1",
		"css-loader": "^1.0.1",
		"dart-sass": "^1.25.0",
		"eslint": "^7.9.0",
		"eslint-config-apostrophe": "^3.4.0",
		"extract-loader": "^3.1.0",
		"file-loader": "^5.0.2",
		"postcss-loader": "^3.0.0",
		"sass-loader": "^7.3.1",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10"
	},
	"dependencies": {
		"@dagrejs/graphlib": "^2.1.4",
		"@sailshq/lodash": "^3.10.4",
		"highlight.js": "^10.2.0",
		"material-components-web": "^7.0.0",
		"npm-run-all": "^4.1.5",
		"remove": "^0.1.5"
	},
	"engines": {
		"node": ">=12.0.0"
	}
}
